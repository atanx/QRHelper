{
  "manifest_version": 2,
  "name": "QRHelper",
  "description": "显示当前页面二维码的小助手。",
  "version": "1.0.0",
  "background": {
    "scripts": [
      "js/background.js",
      "vendor/jquery/jquery.js"
    ],
    "persistent": true
  },
  "icons": {
    "48": "image/icon-48.jpg"
  },
  "browser_action": {
    "default_title": "",
    "default_icon": "image/icon-48.jpg",
    "default_popup": "pages/options.html"
  },

  "options_page": "pages/options.html",
  "options_ui": {
    "page": "pages/options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "vendor/jquery/jquery.js",
        "vendor/jquery/jquery-ui.min.js",
        "vendor/jquery/jquery.cookie.js",
        "js/content.js"
      ]
    }
  ],
  "permissions": [
    "notifications",
    "tabs",
    "*://*/*",
    "webRequest",
    "webRequestBlocking",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "image/icon-48.jpg",
    "image/icon-128.jpg"
  ]
}